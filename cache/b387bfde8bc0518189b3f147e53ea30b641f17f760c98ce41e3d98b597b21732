const fileSize=function(e){let i=0;for(file of e)i+=file.size;return i},checkFile=()=>{const t=document.querySelector("input[type='file']"),s=document.querySelector(".submit");t&&s&&t.addEventListener("change",function(e){console.dir(t);var i=fileSize(t.files);5<t.files.length||5e6<i?(t.classList.add("is-invalid"),t.classList.remove("is-valid"),s.disabled=!0):(t.classList.remove("is-invalid"),t.classList.add("is-valid"),s.disabled=!1)})};!function(){"use strict";var e=document.querySelectorAll(".validate");Array.prototype.slice.call(e).forEach(function(i){checkFile(),i.addEventListener("submit",function(e){i.checkValidity()||(e.preventDefault(),e.stopPropagation()),i.classList.add("was-validated")},!1)})}();