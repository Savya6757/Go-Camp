<% layout("layout/boilerplate") %>
<h1>All Campgrounds</h1>
<a href="campgrounds/new" class="btn btn-success my-3">Create New CampGround</a>
<% for(let campground of campgrounds){ %>
<div class="card mb-2">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= campground.image %>" class="img-fluid card-image" />
    </div>
    <div class="col-md-8 py-3">
      <h5 class="card-title"><%= campground.title %></h5>
      <p class="card-text"><%= campground.description %></p>
      <p>---<small class="text-muted"><%= campground.location %></small></p>
      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
        >View Camp</a
      >
    </div>
  </div>
</div>
<% } %>
