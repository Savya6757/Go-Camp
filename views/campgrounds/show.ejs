<% layout("layout/boilerplate") %>
<p>
  <a href="/campgrounds" class="btn btn-primary back-btn"
    ><i class="fa-solid fa-arrow-left px-1"></i>Go Back</a
  >
</p>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <img src="<%= camp.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Location : <%= camp.location %></li>
        <li class="list-group-item">Price : <%= camp.price %></li>
      </ul>
      <div class="card-body">
        <a class="btn btn-success mb-3" href="/campgrounds/<%= camp._id %>/edit"
          >Edit Information</a
        >
        <form
          method="post"
          action="/campgrounds/<%= camp._id %>?_method=DELETE"
        >
          <Button class="btn btn-danger">Delete</Button>
        </form>
      </div>
    </div>
  </div>
</div>

