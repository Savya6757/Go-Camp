<% layout("layout/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/campgrounds/<%=camp._id%>?_method=PUT">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          id="title"
          name="campground[title]"
          type="text"
          value="<%= camp.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">@</span>
          <input
            type="text"
            id="price"
            name="campground[price]"
            class="form-control"
            placeholder="Username"
            aria-label="Username"
            aria-describedby="basic-addon1"
            value="<%= camp.price %>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          id="location"
          name="campground[location]"
          type="text"
          value="<%= camp.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Source</label>
        <input
          class="form-control"
          id="image"
          name="campground[image]"
          type="text"
          value="<%= camp.image %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          id="description"
          name="campground[description]"
          type="text"
        >
<%= camp.description %></textarea
        >
      </div>
      <div class="mb-3"><button class="btn btn-info">Update</button></div>
    </form>
    <a href="/campgrounds" class="btn btn-primary">Go back</a>
  </div>
</div>
