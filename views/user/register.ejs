<% layout("layout/boilerplate") %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4 order-2 order-md-1  m-auto">
                <div class="card-body">
                    <form action="/register" method="post" class="validate" novalidate>
                        <h2 class=" mb-4">Register</h2>
                        <div class="mb-4">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" id="username" name="username" type="text" required autofocus />
                            <div class="invalid-feedback">Please enter Username</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" id="email" name="email" type="email" required />
                            <div class="invalid-feedback">Please enter a valid Email</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" id="password" name="password" type="password" required />
                            <div class="invalid-feedback">Please enter a password</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="admin">Admin Code</label>
                            <input class="form-control" id="admin" name="adminCode" type="text" />
                        </div>
                        <div class="d-grid mb-3"><button class="btn btn-success">Register</button></div>
                    </form>
                    <span class="me-3 mb-0">Already a user?</span><a href="login">Login</a>
                </div>
            </div>
            <div class="col-md-7 order-1 order-md-2">
                <img src="/images/createPage.webp " class="img-fluid rounded-start" alt="...">
            </div>
        </div>
    </div>
